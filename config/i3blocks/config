# Memory usage
[memory]
command=~/.local/bin/i3blocks/memory
label=🐏
interval=30
markup=pango

[load_average]
label=⚙️
interval=10

[cpu_temp]
command=~/.local/bin/i3blocks/cpu_temp.py
label=🌡️
interval=5

# Battery indicator
#
# The battery instance defaults to 0.
[battery]
command=~/.local/bin/i3blocks/battery.py
#instance=1
interval=30
markup=pango

