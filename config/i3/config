workspace 10 output $secondMonitor

for_window [class="Realtime Robotics - RapidSense"] move container to workspace 2
for_window [class="Realtime Robotics - RapidPlan Create"] move container to workspace 2

bindsym $mod+Shift+Left move workspace to output left
bindsym $mod+Shift+Down move workspace to output down
bindsym $mod+Shift+Up  move workspace to output up
bindsym $mod+Shift+Right move workspace to output right

bindsym Pause exec "~/.local/bin/screen-lock"
bindsym $mod+l exec "~/.local/bin/screen-lock"
bindsym shift+Pause exec "~/.local/bin/suspend"
bindsym shift+$mod+l exec "~/.local/bin/suspend"

exec --no-startup-id xautolock -time 5 -locker ~/.local/bin/screen-lock

exec --no-startup-id /usr/bin/feh --randomize --bg-fill ~/Pictures/wallpapers/*

exec --no-startup-id /usr/bin/slack

bindsym XF86AudioRaiseVolume exec amixer -D pulse sset Master 5%+ && pkill -RTMIN+10 i3blocks
bindsym XF86AudioLowerVolume exec amixer -D pulse sset Master 5%- && pkill -RTMIN+10 i3blocks

bindsym shift+Scroll_Lock exec xbacklight -inc 10
bindsym shift+Print exec xbacklight -dec 10

