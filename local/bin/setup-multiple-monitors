xrandr --auto

NUM_MONITORS="$(xrandr | grep ' connected' | wc -l)"

if [ $NUM_MONITORS -gt 1 ]
then
    xrandr --output eDP-1 --off
    xrandr --output $DISPLAY1 --mode 3840x2160
    xrandr --output $DISPLAY2 --mode 3840x2160
    xrandr --output $DISPLAY2 --right-of $DISPLAY1
    xrandr --dpi 160
fi